            android:id="@+id/cardView7"
            android:layout_width="340dp"
            android:layout_height="100dp"
            app:cardElevation="11dp"
            app:cardCornerRadius="11dp"
            app:cardUseCompatPadding="true"

            />

</LinearLayout>
</ScrollView>



